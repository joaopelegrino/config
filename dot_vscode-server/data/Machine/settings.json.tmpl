{{- /* VS Code Machine-Specific Settings */ -}}
{{- /* These settings are specific to the machine/environment */ -}}
{{- /* Template variables from ~/.config/chezmoi/chezmoi.toml */ -}}
{
    {{- /* Vim Integration - Uses centralized vimrc */ -}}
    "vim.leader": ",",
    "vim.vimrc.path": "/home/{{ .chezmoi.username }}/vimrc",
    "vim.statusBarColors.surroundinputmode": "",
    "vim.digraphs": {},

    {{- /* Remote Development Settings */ -}}
    "remote.downloadExtensionsLocally": true,
    {{- if eq .chezmoi.os "linux" }}
    "remote.WSL.fileWatcher.polling": false,
    "remote.WSL.fileWatcher.pollingInterval": 5000,
    {{- end }}

    {{- /* Terminal Integration - Respects system shell */ -}}
    {{- if eq .chezmoi.os "linux" }}
    "terminal.integrated.shell.linux": "/usr/bin/zsh",
    "terminal.integrated.defaultProfile.linux": "zsh",
    {{- end }}
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "terminal.integrated.fontSize": 14,

    {{- /* File Watcher Settings - Optimized for WSL2 */ -}}
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.hg/store/**": true,
        "**/target/**": true,
        "**/.vscode-server/**": true
    },

    {{- /* Performance Settings for WSL2 */ -}}
    {{- if eq .chezmoi.os "linux" }}
    "files.watcherUsePolling": true,
    "search.followSymlinks": false,
    {{- end }}

    {{- /* Editor Settings */ -}}
    "editor.formatOnSave": false,
    "editor.minimap.enabled": true,
    "editor.rulers": [80, 120],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,

    {{- /* Language-Specific Settings */ -}}
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer",
        "editor.formatOnSave": true,
        "editor.rulers": [100]
    },
    "[python]": {
        "editor.tabSize": 4,
        "editor.rulers": [79, 120]
    },
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": false
    },
    "[yaml]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "[json]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    {{- /* Git Integration */ -}}
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,

    {{- /* Extension-Specific Settings */ -}}

    {{- /* Claude Code Settings */ -}}
    "claude-code.experimental.treeView": true,
    "claude-code.experimental.notifications": true,

    {{- /* GitHub Copilot Settings */ -}}
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": false,
        "markdown": true
    },

    {{- /* Rust Analyzer Settings */ -}}
    "rust-analyzer.server.extraEnv": {
        "PATH": "/home/{{ .chezmoi.username }}/.cargo/bin:$PATH"
    },
    "rust-analyzer.checkOnSave.command": "clippy",
    "rust-analyzer.cargo.allFeatures": true,
    "rust-analyzer.completion.autoimport.enable": true,

    {{- /* Docker Settings */ -}}
    "docker.containers.label": "ContainerName",
    "docker.containers.sortBy": "Status",

    {{- /* Kubernetes Settings */ -}}
    "vs-kubernetes": {
        "vs-kubernetes.crd-code-completion": "enabled",
        "vs-kubernetes.disable-linters": []
    },

    {{- /* Files Association - Chezmoi Templates */ -}}
    "files.associations": {
        ".chezmoi*.yaml": "helm",
        ".chezmoi*.toml": "toml",
        "*.tmpl": "gotmpl"
    },

    {{- /* Workbench Settings */ -}}
    "workbench.colorTheme": "Default Dark Modern",
    "workbench.iconTheme": "vs-minimal",
    "workbench.startupEditor": "welcomePage",

    {{- /* Security Settings */ -}}
    "security.workspace.trust.untrustedFiles": "prompt",
    "security.workspace.trust.enabled": true,

    {{- /* Telemetry */ -}}
    "telemetry.telemetryLevel": "error"
}
